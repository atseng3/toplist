<div class="show container-fluid">
  <div class="post">
    <input placeholder="# Of Things You Want To Share With The World" value=""/>
    <div class="post__thumbnail">COVER PHOTO</div>
    <div class="post__info">
      <div class="post__user-avatar"></div>
      <div class="post__user-name">@sheryl2</div>
    </div>

    <div class="post__body">
      <textarea rows="50" cols="100" placeholder="1. Title
      Say a little something about this."></textarea>
    </div>



  </div>

</div>
<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
